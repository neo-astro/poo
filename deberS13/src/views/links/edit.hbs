<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">

                        <div class="form-group">
                            <input  required class="form-control" name="tilte" value='{{link.tilte}}' placeholder="titulo"> 
                        </div>

                        <div class="form-group">
                            <input type="url" name="url" required value={{link.url}} class="form-control" placeholder="escribe la url">
                        </div>

                        <div class="form-group">
                            <textarea name="description" row="2" required  class="form-control" placeholder="descripcion">{{link.description}}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                guardar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>