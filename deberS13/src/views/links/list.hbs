<div class="container p-4">
    <div class="row">
        
        {{#each links}}
        {{!-- links es un parametro enviado por el metodo render junto a su arc a renderizar --}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href='{{url}}' target='_blank'>
                        <h3 class="card-tilte text-uppercase">
                            {{tilte}}
                            
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar link</a>
                    <a href="/links/edit/{{id}}" class="btn btn-info">Edit</a>
                </div>
            </div>
        </div>
